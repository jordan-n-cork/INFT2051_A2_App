             x:Class="A2_AppProject.MainPage" >

    <!-- instances(?) of content pages making up the tabbed page 

    <local:TodayView />     has to be the name of the x.xaml page to load it as content page 

    <local:TasksView />

    <local:HabitsView />

    -->

    <NavigationPage Title="Today View">
        <x:Arguments>
            <local:TodayView />
