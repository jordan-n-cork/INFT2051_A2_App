<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="A2_AppProject.Pages.TasksView"
             Title="Tasks">
    
    <ContentPage.Content>



        <StackLayout>

            <ScrollView VerticalOptions="FillAndExpand">    <!-- one problem here is when the listview goes over a certain amount it does not scroll down all the way-->
                <ListView x:Name="TasksList">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <TextCell Text="{Binding Name}" Detail="{Binding Detail}"></TextCell>
                            <!-- will eventually have the cell be a button to open event details -->
                            
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </ScrollView>
            
            <!-- Test button for list -->
            <Button Text="AddItem"              
                VerticalOptions="CenterAndExpand" HorizontalOptions="Center" Clicked="OnAddItemButtonClicked" />


        </StackLayout>
        

    </ContentPage.Content>
</ContentPage>